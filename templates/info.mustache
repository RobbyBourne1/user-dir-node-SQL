<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <link rel="stylesheet" href="/style.css">
  <title>User Info</title>
</head>

<body>
  <div class="wrapper-info">
    <div class="info-page">
      <div class="img-name">
        <img class="rounded-img" src="{{avatar}}" alt="">
        <div class="name-info">
          <h1>{{name}}</h1>
          <div class="contact-info">
            <div class="row1">
              <p>
                {{#city}}{{city}}, {{country}}{{/city}}
              </p>
              <p>{{^city}}{{country}}{{/city}}
              </p>
              <p>
                {{#job}}{{job}}{{/job}}
              </p>
              <p class="avail">{{^job}}Available For Hire{{/job}}
              </p>
            </div>
            <div class="row2">
              <p>{{email}}</p>
              <p>{{phone}}</p>
            </div>
          </div>
        </div>
      </div>
      <div class="details">
        <dl>
          {{#university}}
          <dt>Education</dt>
          <dd>{{university}}</dd>
          {{/university}}
      </div>
      <div class="deleteButton">
        <button type="button" id="deleteButton" data-id="{{id}}" name="delete">Delete</button>
      </div>
    </div>
  </div>
 <script src="/main.js"></script>
</body>

</html>
